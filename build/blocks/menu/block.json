{
  "apiVersion": 3,
  "name": "codeweber-blocks/menu",
  "version": "0.1.0",
  "title": "Menu",
  "category": "codeweber-gutenberg-elements",
  "icon": "menu",
  "description": "Menu block with Custom and WordPress Menu modes. Supports dark/light theme and list styling options.",
  "keywords": [
    "menu",
    "navigation",
    "nav",
    "list"
  ],
  "supports": {
    "html": false,
    "customClassName": true,
    "anchor": true
  },
  "attributes": {
    "mode": {
      "type": "string",
      "default": "custom"
    },
    "wpMenuId": {
      "type": "number",
      "default": 0
    },
    "depth": {
      "type": "number",
      "default": 0
    },
    "orientation": {
      "type": "string",
      "default": "horizontal"
    },
    "theme": {
      "type": "string",
      "default": "default"
    },
    "listType": {
      "type": "string",
      "default": "none"
    },
    "bulletColor": {
      "type": "string",
      "default": "primary"
    },
    "bulletBg": {
      "type": "boolean",
      "default": false
    },
    "iconClass": {
      "type": "string",
      "default": "uil uil-arrow-right"
    },
    "textColor": {
      "type": "string",
      "default": ""
    },
    "items": {
      "type": "array",
      "default": [
        {
          "id": "item-1",
          "text": "About Us",
          "url": "#"
        },
        {
          "id": "item-2",
          "text": "Our Story",
          "url": "#"
        },
        {
          "id": "item-3",
          "text": "Projects",
          "url": "#"
        }
      ]
    },
    "menuClass": {
      "type": "string",
      "default": "list-unstyled text-reset mb-0"
    },
    "menuId": {
      "type": "string",
      "default": ""
    },
    "menuData": {
      "type": "string",
      "default": ""
    },
    "itemClass": {
      "type": "string",
      "default": ""
    },
    "linkClass": {
      "type": "string",
      "default": ""
    },
    "containerClass": {
      "type": "string",
      "default": ""
    },
    "topLevelClass": {
      "type": "string",
      "default": ""
    },
    "topLevelClassStart": {
      "type": "string",
      "default": ""
    },
    "topLevelClassEnd": {
      "type": "string",
      "default": ""
    },
    "enableWidget": {
      "type": "boolean",
      "default": false
    },
    "enableMegaMenu": {
      "type": "boolean",
      "default": false
    },
    "columns": {
      "type": "number",
      "default": 1
    },
    "enableTitle": {
      "type": "boolean",
      "default": false
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "titleTag": {
      "type": "string",
      "default": "h4"
    },
    "titleColor": {
      "type": "string",
      "default": ""
    },
    "titleColorType": {
      "type": "string",
      "default": "solid"
    },
    "titleSize": {
      "type": "string",
      "default": ""
    },
    "titleWeight": {
      "type": "string",
      "default": ""
    },
    "titleTransform": {
      "type": "string",
      "default": ""
    },
    "titleClass": {
      "type": "string",
      "default": "mb-3"
    },
    "useCollapse": {
      "type": "boolean",
      "default": false
    }
  },
  "textdomain": "codeweber-gutenberg-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}