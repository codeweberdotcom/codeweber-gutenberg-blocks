{
	"apiVersion": 3,
	"name": "codeweber-blocks/code",
	"version": "0.1.0",
	"title": "Code",
	"category": "codeweber-gutenberg-elements",
	"icon": "editor-code",
	"description": "Code snippet with Copy button and optional language (HTML, CSS, JS, etc.).",
	"keywords": ["code", "snippet", "pre", "syntax", "clipboard"],
	"supports": {
		"html": false,
		"customClassName": true,
		"anchor": true
	},
	"attributes": {
		"content": {
			"type": "string",
			"default": ""
		},
		"language": {
			"type": "string",
			"default": "html"
		},
		"copyLabel": {
			"type": "string",
			"default": "Copy"
		},
		"backgroundColor": {
			"type": "string",
			"default": "dark"
		}
	},
	"textdomain": "codeweber-gutenberg-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
