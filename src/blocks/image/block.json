{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "codeweber-blocks/image",
  "version": "1.0.3",
  "title": "Image",
  "category": "codeweber-gutenberg-blocks",
  "icon": "format-image",
  "description": "Universal image block with gallery, carousel, and effects",
  "keywords": ["image", "gallery", "carousel", "swiper", "lightbox"],
  "supports": {
    "html": false,
    "customClassName": false
  },
  "textdomain": "codeweber-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.scss",
  "style": "file:./style.scss",
  "attributes": {
    "displayMode": {
      "type": "string",
      "default": "single"
    },
    "images": {
      "type": "array",
      "default": []
    },
    "gridColumns": {
      "type": "string",
      "default": "3"
    },
    "gridGapX": {
      "type": "string",
      "default": "md-5"
    },
    "gridGapY": {
      "type": "string",
      "default": "5"
    },
    "swiperEffect": {
      "type": "string",
      "default": "slide"
    },
    "swiperItems": {
      "type": "string",
      "default": "3"
    },
    "swiperItemsXs": {
      "type": "string",
      "default": "1"
    },
    "swiperItemsSm": {
      "type": "string",
      "default": ""
    },
    "swiperItemsMd": {
      "type": "string",
      "default": "2"
    },
    "swiperItemsLg": {
      "type": "string",
      "default": ""
    },
    "swiperItemsXl": {
      "type": "string",
      "default": "3"
    },
    "swiperItemsXxl": {
      "type": "string",
      "default": ""
    },
    "swiperSpeed": {
      "type": "number",
      "default": 500
    },
    "swiperAutoplay": {
      "type": "boolean",
      "default": false
    },
    "swiperAutoplayTime": {
      "type": "number",
      "default": 5000
    },
    "swiperAutoHeight": {
      "type": "boolean",
      "default": false
    },
    "swiperWatchOverflow": {
      "type": "boolean",
      "default": false
    },
    "swiperMargin": {
      "type": "string",
      "default": "30"
    },
    "swiperLoop": {
      "type": "boolean",
      "default": false
    },
    "swiperNav": {
      "type": "boolean",
      "default": true
    },
    "swiperDots": {
      "type": "boolean",
      "default": true
    },
    "swiperDrag": {
      "type": "boolean",
      "default": false
    },
    "swiperReverse": {
      "type": "boolean",
      "default": false
    },
    "swiperUpdateResize": {
      "type": "boolean",
      "default": true
    },
    "hoverEffect": {
      "type": "string",
      "default": "hover-scale"
    },
    "enableEffect": {
      "type": "boolean",
      "default": false
    },
    "effectType": {
      "type": "string",
      "default": "overlay"
    },
    "overlayType": {
      "type": "string",
      "default": "overlay-1"
    },
    "overlayGradient": {
      "type": "string",
      "default": ""
    },
    "overlayColor": {
      "type": "boolean",
      "default": false
    },
    "tooltipType": {
      "type": "string",
      "default": "itooltip-light"
    },
    "cursor": {
      "type": "string",
      "default": ""
    },
    "iconName": {
      "type": "string",
      "default": "arrow-right"
    },
    "iconColor": {
      "type": "string",
      "default": "dark"
    },
    "captionType": {
      "type": "string",
      "default": "none"
    },
    "captionBg": {
      "type": "string",
      "default": "white"
    },
    "captionPosition": {
      "type": "string",
      "default": "bottom-left"
    },
    "captionPadding": {
      "type": "string",
      "default": "2-3"
    },
    "captionFontSize": {
      "type": "string",
      "default": "h5"
    },
    "borderRadius": {
      "type": "string",
      "default": "rounded"
    },
    "enableLightbox": {
      "type": "boolean",
      "default": true
    },
    "lightboxGallery": {
      "type": "string",
      "default": "gallery-1"
    },
    "blockClass": {
      "type": "string",
      "default": ""
    },
    "blockData": {
      "type": "string",
      "default": ""
    },
    "blockId": {
      "type": "string",
      "default": ""
    }
  }
}

